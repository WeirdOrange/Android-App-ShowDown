<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:orientation="vertical"
        android:clipChildren="false">

        <ImageView
            android:id="@+id/card_bg_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/greatestshowmanposter"
            android:scaleType="centerCrop" />
        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_fade_mask" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                >
                <TextView
                    android:id="@+id/tv_event_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Event Title"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:fontFamily="@font/nats_regular"
                    android:textColor="@android:color/black" />
                <TextView
                    android:id="@+id/tv_event_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="25 Dec 2025"
                    android:textSize="24sp"
                    android:fontFamily="@font/roboto_condensed_extrabolditalic"
                    android:textColor="@android:color/black"
                    />

            </LinearLayout>
            <TextView
                android:id="@+id/tv_event_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Event description goes here"
                android:textSize="16sp"
                android:textColor="@android:color/tertiary_text_dark"
                android:fontFamily="@font/nats_regular"
                android:maxLines="1"
                android:ellipsize="end" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/tv_event_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Location"
                    android:textSize="16sp"
                    android:textColor="@android:color/tertiary_text_dark"
                    android:fontFamily="@font/nats_regular"
                    android:paddingTop="5dp"
                    android:drawableStart="@android:drawable/ic_dialog_map"
                    android:drawablePadding="4dp"
                    android:drawableTint="@color/black"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/tv_available_tickets"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="100 tickets available"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_green_light"
                    android:fontFamily="@font/nats_regular"
                    />

                <Button
                    android:id="@+id/btn_book_ticket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Book"
                    android:textSize="12sp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:backgroundTint="@color/secondary_dark"
                    />
            </LinearLayout>
        </LinearLayout>

    </FrameLayout>
</androidx.cardview.widget.CardView>
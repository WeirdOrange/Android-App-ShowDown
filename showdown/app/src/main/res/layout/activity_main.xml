<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#E3E1FF"
    android:weightSum="100">

    <include layout="@layout/navbar" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E3E1FF"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="100"
            android:layout_marginTop="50dp"
            android:gravity="top|center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center">

                <Button
                    android:id="@+id/toggle_nav_btn"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/menu_icon" />

                <TextView
                    android:id="@+id/event_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="30dp"
                    android:padding="0dp"
                    android:text="LONDON MUSICAL SHOW"
                    android:textSize="20sp"
                    android:textStyle="bold|italic" />

                <ImageButton
                    android:id="@+id/profile_bttn"
                    android:layout_width="40dp"
                    android:layout_height="45dp"
                    android:layout_gravity="end"
                    android:background="@android:color/transparent"
                    android:padding="0dp"
                    android:src="@drawable/account_circle"
                    android:text="@string/nav_profile" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_event_carousel"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:clipToPadding="false"
                android:background="#E3E1FF"
                android:paddingStart="40dp"
                android:paddingEnd="40dp"/>

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_gradient2"
                android:gravity="top|center"
                android:orientation="vertical"
                android:weightSum="100">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:layout_width="350dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        card_view:cardBackgroundColor="@color/secondary_light"
                        card_view:cardCornerRadius="12dp"
                        card_view:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="top|start"
                            android:orientation="vertical"
                            android:paddingStart="20dp"
                            android:paddingEnd="20dp">

                            <TextView
                                android:id="@+id/event_organizer"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/nats_regular"
                                android:text="By Some Organization"
                                android:textSize="24sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/nats_regular"
                                android:text="Description"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/event_description"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/nats_regular"
                                android:text="BLABLABLABLALABLABLBALBALBLABLABLABLALABALBALBALA"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="30dp"
                                android:layout_marginBottom="4dp"
                                android:fontFamily="@font/nats_regular"
                                android:text="Location"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/event_location"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableStart="@android:drawable/ic_dialog_map"
                                android:drawablePadding="8dp"
                                android:fontFamily="@font/nats_regular"
                                android:gravity="center_vertical"
                                android:text="Event location"
                                android:textSize="16sp" />


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="30dp"
                                android:layout_marginBottom="4dp"
                                android:text="Event Duration: "
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="50dp"
                                android:layout_weight="2"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/event_start_date"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="Start Date"
                                    android:textSize="14sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="---"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/event_end_date"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="End Date"
                                    android:textSize="14sp" />
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <GridLayout
                        android:layout_width="350dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:columnCount="5">

                        <Button
                            android:id="@+id/event_contact"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center_vertical"
                            android:layout_columnSpan="1"
                            android:background="@drawable/whatsapp"
                            android:backgroundTint="@color/primary_light" />

                        <Button
                            android:id="@+id/event_info"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center_vertical"
                            android:layout_columnSpan="1"
                            android:layout_marginStart="30dp"
                            android:background="@drawable/information"
                            android:backgroundTint="@color/primary_light" />

                        <Button
                            android:id="@+id/btn_get_ticket"
                            android:layout_width="220dp"
                            android:layout_height="50dp"
                            android:layout_columnSpan="3"
                            android:layout_gravity="end|center_vertical"
                            android:backgroundTint="@color/primary_light"
                            android:padding="0dp"
                            android:text="Get Ticket" />
                    </GridLayout>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
            <include layout="@layout/bottomsheet_card" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
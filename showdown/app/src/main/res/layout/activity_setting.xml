<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    style="@style/Background3">

    <include layout="@layout/navbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="350dp">
                <ImageButton
                    android:id="@+id/profile2"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/greatestshowmanposter"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/CardMask" />
            </FrameLayout>

            <Button
                android:id="@+id/toggle_nav_btn"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="top|start"
                android:layout_marginTop="50dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/menu_icon"
                style="@style/NavBttn"
                />
            <androidx.cardview.widget.CardView
                android:layout_width="260dp"
                android:layout_height="260dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="120dp"
                android:elevation="12dp"
                app:cardCornerRadius="180dp"
                android:layout_centerHorizontal="true"
                app:cardBackgroundColor="@color/white"
                android:padding="5dp"
                android:innerRadius="0dp"
                android:shape="ring"
                android:thicknessRatio="1.9">
                <ImageButton
                    android:id="@+id/profile1"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:src="@android:drawable/ic_menu_camera"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    style="@style/Circle"/>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="390dp"
                android:orientation="vertical"
                android:gravity="center|top"
                >
                <Button
                    android:id="@+id/btn_toggle_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Edit Profile"
                    android:textSize="14sp"
                    android:fontFamily="@font/nats_regular"
                    android:backgroundTint="@color/primary_light"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:elevation="4dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Username:"
                    android:textSize="20sp"
                    android:fontFamily="@font/nats_regular"
                    />
                <EditText
                    android:id="@+id/et_username"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:text="Inti International College Penang"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:fontFamily="@font/nats_regular"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:background="@color/white"
                    android:padding="12dp"/>
                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email:"
                android:textSize="20sp"
                android:fontFamily="@font/nats_regular"
                />
                <EditText
                    android:id="@+id/et_email"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:text="abcd@gmail.com"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:fontFamily="@font/nats_regular"
                    android:background="@color/white"
                    android:textSize="20sp"
                    android:padding="12dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone Number:"
                    android:textSize="20sp"
                    android:fontFamily="@font/nats_regular"
                    />
                <EditText
                    android:id="@+id/et_phone_number"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:text="+60164075284"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:fontFamily="@font/nats_regular"
                    android:background="@color/white"
                    android:textSize="20sp"
                    android:padding="12dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="App Theme:"
                    android:textSize="20sp"
                    android:fontFamily="@font/nats_regular"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"/>

                <RadioGroup
                    android:id="@+id/rg_theme"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:padding="8dp">

                    <RadioButton
                        android:id="@+id/rb_system"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="System"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:fontFamily="@font/nats_regular"
                        android:padding="8dp"/>

                    <RadioButton
                        android:id="@+id/rb_light"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Light"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:fontFamily="@font/nats_regular"
                        android:padding="8dp"/>

                    <RadioButton
                        android:id="@+id/rb_dark"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Dark"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:fontFamily="@font/nats_regular"
                        android:padding="8dp"/>
                </RadioGroup>
                <Button
                    android:id="@+id/btn_logout"
                    android:layout_width="320dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="50dp"
                    android:gravity="center"
                    android:padding="0dp"
                    android:text="Log Out"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:fontFamily="@font/nats_regular"
                    android:backgroundTint="@color/primary_light"
                    />
            </LinearLayout>
        </FrameLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
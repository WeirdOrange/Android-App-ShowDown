<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/secondary_light">

    <include layout="@layout/navbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="350dp">
                <ImageButton
                    android:id="@+id/profile2"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/greatestshowmanposter"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gradient_fade_mask2" />
            </FrameLayout>

            <Button
                android:id="@+id/toggle_nav_btn"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="top|start"
                android:layout_marginTop="50dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/menu_icon"
                app:backgroundTint="@null"
                />
            <androidx.cardview.widget.CardView
                android:layout_width="260dp"
                android:layout_height="260dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="120dp"
                android:elevation="12dp"
                android:id="@+id/profile1"
                app:cardCornerRadius="180dp"
                android:layout_centerHorizontal="true"
                app:cardBackgroundColor="@color/white"
                android:padding="5dp"
                android:innerRadius="0dp"
                android:shape="ring"
                android:thicknessRatio="1.9">
                <ImageButton
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:src="@drawable/picture"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:background="@drawable/circle_dark"/>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="390dp"
                android:orientation="vertical"
                android:gravity="center|top"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Username:"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:fontFamily="@font/nats_regular"
                    />
                <EditText
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:text="Inti International College Penang"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:fontFamily="@font/nats_regular"
                    android:textSize="20sp"
                    android:background="@color/white"
                    android:padding="12dp"/>
                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email:"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:fontFamily="@font/nats_regular"
                />
                <EditText
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:text="Inti International College Penang"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:fontFamily="@font/nats_regular"
                    android:background="@color/white"
                    android:textSize="20sp"
                    android:padding="12dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone Number:"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:fontFamily="@font/nats_regular"
                    />
                <EditText
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:text="+60164075284"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:fontFamily="@font/nats_regular"
                    android:background="@color/white"
                    android:textSize="20sp"
                    android:padding="12dp"/>

                <LinearLayout
                    android:layout_width="320dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="50dp"
                    android:background="@color/white"
                    >
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Light Mode"
                        android:textSize="20sp"
                        android:fontFamily="@font/nats_regular"
                        android:background="@drawable/square_bttn"
                        />
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Dark Mode"
                        android:textSize="20sp"
                        android:fontFamily="@font/nats_regular"
                        android:background="@drawable/square_bttn"
                        />
                </LinearLayout>
                <Button
                    android:layout_width="320dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="50dp"
                    android:gravity="center"
                    android:padding="0dp"
                    android:text="Log Out"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:fontFamily="@font/nats_regular"
                    android:backgroundTint="@color/primary_light"
                    />
            </LinearLayout>
        </FrameLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nats_regular"
        android:text="Add Ticket Slot"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nats_regular"
        android:text="Select Date"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/btn_ticket_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nats_regular"
        android:text="Select Date"
        android:textSize="16sp"
        android:layout_marginTop="4dp"
        android:backgroundTint="@color/primary_light"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Time"
        android:fontFamily="@font/nats_regular"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="12dp"/>

    <Button
        android:id="@+id/btn_ticket_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Time"
        android:fontFamily="@font/nats_regular"
        android:textSize="16sp"
        android:layout_marginTop="4dp"
        android:backgroundTint="@color/primary_light"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number of Tickets"
        android:fontFamily="@font/nats_regular"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="12dp"/>

    <EditText
        android:id="@+id/et_ticket_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter ticket amount (e.g., 50)"
        android:fontFamily="@font/nats_regular"
        android:inputType="number"
        android:padding="12dp"
        android:background="@drawable/edittext_border"
        android:layout_marginTop="4dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        android:gravity="end">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nats_regular"
            android:text="Cancel"
            android:textSize="16sp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@android:color/darker_gray"/>

        <Button
            android:id="@+id/btn_add_ticket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nats_regular"
            android:text="Add Ticket"
            android:textSize="16sp"
            android:backgroundTint="@color/primary_light"/>
    </LinearLayout>

</LinearLayout>
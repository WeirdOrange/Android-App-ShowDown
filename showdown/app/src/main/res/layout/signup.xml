<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style="@style/BackgroundLogin">

    <LinearLayout
        style="?android:attr/buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Background Text -->
        <TextView
            android:id="@+id/background_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="false"
            android:layout_marginTop="-100sp"
            android:layout_marginStart="-10sp"
            android:layout_marginEnd="-10sp"
            android:fontFamily="@font/nats_regular"
            android:gravity="center"
            android:includeFontPadding="false"
            android:padding="0sp"
            android:text="@string/signup_bg"
            android:textColor="@color/white_faded"
            android:textSize="147sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="false"
            android:layout_marginTop="-160sp"
            android:layout_marginStart="-10sp"
            android:layout_marginEnd="-10sp"
            android:fontFamily="@font/nats_regular"
            android:gravity="center"
            android:includeFontPadding="false"
            android:padding="0sp"
            android:text="@string/signup_bg"
            android:textColor="@color/white_faded"
            android:textSize="149sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nats_regular"
            android:gravity="center"
            android:includeFontPadding="false"
            android:singleLine="false"
            android:layout_marginTop="0sp"
            android:layout_marginStart="-10sp"
            android:layout_marginEnd="-10sp"
            android:padding="0sp"
            android:text="@string/signup_bg"
            android:textColor="@color/white_faded"
            android:textSize="149sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nats_regular"
            android:gravity="center"
            android:includeFontPadding="false"
            android:singleLine="false"
            android:layout_marginTop="-170sp"
            android:layout_marginStart="-10sp"
            android:layout_marginEnd="-10sp"
            android:padding="0sp"
            android:text="@string/signup_bg"
            android:textColor="@color/white_faded"
            android:textSize="149sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="600dp"
        android:layout_height="600dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        style="@style/login_Circle"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40sp"
            android:text="@string/username_tag"
            tools:ignore="RtlSymmetry" />
        <EditText
            android:id="@+id/username_input"
            android:layout_width="200sp"
            android:layout_height="40sp"
            android:background="@drawable/edittext_border"
            android:layout_marginTop="5sp"
            android:importantForAutofill="no"
            android:paddingStart="8sp"
            android:hint="@string/username_hint"
            android:textColorHint="@color/gray"
            android:fontFamily="@font/nats_regular"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:inputType="text"
            tools:ignore="RtlSymmetry" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="@string/email_tag"
            tools:ignore="RtlSymmetry" />
        <EditText
            android:id="@+id/email_input"
            android:layout_width="200sp"
            android:layout_height="40sp"
            android:background="@drawable/edittext_border"
            android:layout_marginTop="5sp"
            android:importantForAutofill="no"
            android:paddingStart="8sp"
            android:hint="@string/email_hint"
            android:textColorHint="@color/gray"
            android:fontFamily="@font/nats_regular"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:inputType="text"
            tools:ignore="RtlSymmetry" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="@string/password_tag"
            tools:ignore="RtlSymmetry" />
        <EditText
            android:id="@+id/password_input"
            android:layout_width="200sp"
            android:layout_height="40sp"
            android:background="@drawable/edittext_border"
            android:layout_marginTop="5sp"
            android:importantForAutofill="no"
            android:paddingStart="8sp"
            android:hint="@string/password_hint"
            android:textColorHint="@color/gray"
            android:fontFamily="@font/nats_regular"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:inputType="textPassword"
            tools:ignore="RtlSymmetry"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="@string/cfm_password_tag"
            tools:ignore="RtlSymmetry" />
        <EditText
            android:id="@+id/confirm_password_input"
            android:layout_width="200sp"
            android:layout_height="40sp"
            android:background="@drawable/edittext_border"
            android:layout_marginTop="5sp"
            android:importantForAutofill="no"
            android:paddingStart="8sp"
            android:hint="@string/cfm_password_hint"
            android:textColorHint="@color/gray"
            android:fontFamily="@font/nats_regular"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:inputType="textPassword"
            tools:ignore="RtlSymmetry" />

        <Button
            android:id="@+id/signup_bttn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:fontFamily="@font/nats_regular"
            android:gravity="center"
            android:includeFontPadding="false"
            android:paddingTop="-10dp"
            android:paddingBottom="0dp"
            android:text="@string/register_btn"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/new_here_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/have_acc"
                android:textSize="10sp"
                tools:ignore="SmallSp" />

            <Button
                android:id="@+id/visit_login_bttn"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:text="@string/ask_login_tag"
                android:textSize="10sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:padding="0dp"
                android:layout_marginStart="10dp"
                tools:ignore="SmallSp" />

        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="180dp"
        android:layout_height="250dp"
        android:src="@drawable/showdownlogo"
        android:layout_marginTop="-290dp"
        android:layout_gravity="center"
        />
</FrameLayout>
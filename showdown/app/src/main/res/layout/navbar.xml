<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/navbar_container"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="top"
    app:cardElevation="60dp"
    android:visibility="gone"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/secondary_light_shade"
        >

        <Button
            android:id="@+id/toggle_closenav_btn"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/menu_icon" />
        <Button
            android:id="@+id/main_bttn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/secondary_light_shade"
            android:paddingTop="10dp"
            android:text="Home"
            android:textColor="@color/black"
            android:letterSpacing="0.3"
            />
        <Button
            android:id="@+id/calendar_bttn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/secondary_light_shade"
            android:text="Calendar"
            android:textColor="@color/black"
            android:letterSpacing="0.3"
            />
        <Button
            android:id="@+id/setting_bttn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/secondary_light_shade"
            android:text="Settings"
            android:textColor="@color/black"
            android:letterSpacing="0.3"
            />

    </LinearLayout>

    <View
        android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone"/>
</androidx.cardview.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/secondary_light"
    >
    <LinearLayout
        android:layout_width="750dp"
        android:layout_height="750dp"
        android:layout_marginTop="130dp"
        android:layout_marginStart="-170dp"
        android:background="@drawable/circle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:layout_gravity="top"
        >

        <ImageButton
            android:id="@+id/btn_cancel"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:paddingStart="20dp"
            android:layout_marginEnd="55dp"
            android:src="@drawable/previous_arrow_resized"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="80dp"
            android:text="Post New Events"
            android:fontFamily="@font/nats_regular"
            android:textColor="@color/white"
            android:textSize="32sp"
            />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            >
            <androidx.cardview.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="12dp"
                card_view:cardElevation="4dp"
                card_view:cardBackgroundColor="#FFFFFF"
                android:layout_gravity="center"
                android:layout_margin="8dp">

                <ImageButton
                    android:id="@+id/cardImage2"
                    android:layout_width="180dp"
                    android:layout_height="220dp"
                    android:scaleType="fitCenter"
                    android:background="@color/gray"
                    android:src="@drawable/picture" />
            </androidx.cardview.widget.CardView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:text="Title:"
                tools:ignore="RtlSymmetry" />
            <EditText
                android:id="@+id/et_event_title"
                android:layout_width="300sp"
                android:layout_height="40sp"
                android:background="@drawable/edittext_border"
                android:layout_marginTop="5sp"
                android:importantForAutofill="no"
                android:paddingStart="8sp"
                android:hint="Enter Title"
                android:fontFamily="@font/nats_regular"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:inputType="text"
                tools:ignore="RtlSymmetry" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:text="Description:"
                tools:ignore="RtlSymmetry" />
            <EditText
                android:id="@+id/et_event_description"
                android:layout_width="300sp"
                android:layout_height="40sp"
                android:background="@drawable/edittext_border"
                android:layout_marginTop="5sp"
                android:importantForAutofill="no"
                android:paddingStart="8sp"
                android:hint="Enter Event Summary"
                android:fontFamily="@font/nats_regular"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:inputType="textMultiLine"
                tools:ignore="RtlSymmetry" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:text="Location"
                tools:ignore="RtlSymmetry" />
            <EditText
                android:id="@+id/et_event_location"
                android:layout_width="300sp"
                android:layout_height="40sp"
                android:background="@drawable/edittext_border"
                android:layout_marginTop="5sp"
                android:importantForAutofill="no"
                android:paddingStart="8sp"
                android:hint="Enter Location"
                android:fontFamily="@font/nats_regular"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:inputType="textMultiLine"
                tools:ignore="RtlSymmetry"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="190dp"
                android:text="Start Date:"
                android:textColor="@color/white"
                tools:ignore="RtlSymmetry" />
            <Button
                android:id="@+id/btn_select_start_date"
                android:layout_width="300sp"
                android:layout_height="40sp"
                android:background="@drawable/edittext_border"
                android:layout_marginTop="5sp"
                android:text="Select Start Date"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="200dp"
                android:text="End Date:"
                android:textColor="@color/white"
                tools:ignore="RtlSymmetry" />

            <Button
                android:id="@+id/btn_select_end_date"
                android:layout_width="300sp"
                android:layout_height="40sp"
                android:background="@drawable/edittext_border"
                android:layout_marginTop="5sp"
                android:text="Select End Date"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:text="Ticket"
                tools:ignore="RtlSymmetry" />

            <androidx.cardview.widget.CardView
                android:layout_width="300dp"
                android:layout_height="40dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/gray"
                android:layout_margin="8dp"
                >
                <ImageButton
                    android:id="@+id/cv_add_ticket"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@android:drawable/ic_input_add"
                    android:layout_gravity="center"
                    app:backgroundTint="@color/gray"
                    app:tint="@color/white" />
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/tv_ticket_count"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="No tickets added yet"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_marginTop="4dp"
                android:visibility="visible"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_ticket_list"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:visibility="gone"/>
        </LinearLayout>
    </ScrollView>


    <Button
        android:id="@+id/btn_publish_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:fontFamily="@font/nats_regular"
        android:layout_gravity="bottom|center"
        android:includeFontPadding="false"
        android:paddingTop="-10dp"
        android:paddingBottom="0dp"
        android:layout_marginBottom="10dp"
        android:text="Publish Event"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:backgroundTint="@color/primary_light"
        />

</FrameLayout>
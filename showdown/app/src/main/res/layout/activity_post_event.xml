<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/secondary_light"
    >
    <LinearLayout
        android:layout_width="750dp"
        android:layout_height="750dp"
        android:layout_marginTop="130dp"
        android:layout_marginStart="-170dp"
        android:background="@drawable/circle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:layout_gravity="top"
        >

        <ImageView
            android:id="@+id/iv_previous_month"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:paddingStart="20dp"
            android:layout_marginRight="75dp"
            android:src="@drawable/previous_arrow_resized"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="100dp"
            android:text="Post New Events"
            android:fontFamily="@font/nats_regular"
            android:textColor="@color/white"
            android:textSize="32sp"
            />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            >
            <androidx.cardview.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="12dp"
                card_view:cardElevation="4dp"
                card_view:cardBackgroundColor="#FFFFFF"
                android:layout_gravity="center"
                android:layout_margin="8dp">

                <LinearLayout
                    android:layout_width="180dp"
                    android:layout_height="220dp"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/cardImage2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:background="@color/primary_light"
                        android:src="@drawable/picture" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:layout_marginEnd="100dp"
                android:text="Title:"
                tools:ignore="RtlSymmetry" />
            <EditText
                android:layout_width="300sp"
                android:layout_height="40sp"
                android:background="@drawable/edittext_border"
                android:layout_marginTop="5sp"
                android:importantForAutofill="no"
                android:paddingStart="8sp"
                android:hint="Enter Title"
                android:fontFamily="@font/nats_regular"
                android:textColor="@color/white_faded"
                android:textSize="12sp"
                android:inputType="text"
                tools:ignore="RtlSymmetry" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="100dp"
                android:text="Description:"
                tools:ignore="RtlSymmetry" />
            <EditText
                android:layout_width="300sp"
                android:layout_height="40sp"
                android:background="@drawable/edittext_border"
                android:layout_marginTop="5sp"
                android:importantForAutofill="no"
                android:paddingStart="8sp"
                android:hint="Enter Event Summary"
                android:fontFamily="@font/nats_regular"
                android:textColor="@color/white_faded"
                android:textSize="12sp"
                android:inputType="text"
                tools:ignore="RtlSymmetry" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:text="Location"
                tools:ignore="RtlSymmetry" />
            <EditText
                android:layout_width="300sp"
                android:layout_height="40sp"
                android:background="@drawable/edittext_border"
                android:layout_marginTop="5sp"
                android:importantForAutofill="no"
                android:paddingStart="8sp"
                android:hint="@string/password_hint"
                android:fontFamily="@font/nats_regular"
                android:textColor="@color/white_faded"
                android:textSize="12sp"
                android:inputType="textPassword"
                tools:ignore="RtlSymmetry"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:text="Ticket"
                tools:ignore="RtlSymmetry" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_add_ticket"
                android:layout_width="300dp"
                android:layout_height="40dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/gray"
                android:layout_margin="8dp"
                >
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="30dp"
                    android:src="@android:drawable/ic_input_add"
                    android:layout_gravity="center"
                    app:tint="@color/white" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>


    <Button
        android:id="@+id/signup_bttn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:fontFamily="@font/nats_regular"
        android:layout_gravity="bottom|center"
        android:includeFontPadding="false"
        android:paddingTop="-10dp"
        android:paddingBottom="0dp"
        android:layout_marginBottom="10dp"
        android:text="@string/register_btn"
        android:textColor="@color/primary_light"
        android:textSize="16sp" />

</FrameLayout>
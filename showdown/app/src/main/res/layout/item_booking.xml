<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_booking_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="John Doe"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:fontFamily="@font/nats_regular"/>

            <TextView
                android:id="@+id/tv_booking_user_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+60 12-345 6789"
                android:textSize="14sp"
                android:textColor="@color/gray"
                android:layout_marginTop="4dp"
                android:drawableStart="@drawable/phone_icon"
                android:drawablePadding="4dp"/>

            <TextView
                android:id="@+id/tv_booking_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Booked on: 15 Nov 2025"
                android:textSize="12sp"
                android:textColor="@color/gray"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/tv_booking_event_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event date: 25 Dec 2025"
                android:textSize="12sp"
                android:textColor="@color/gray"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/tv_booking_ticket_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 ticket(s)"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/secondary_dark"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btn_booking_whatsapp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/whatsapp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="WhatsApp"
                app:tint="@color/primary_light"/>

            <ImageButton
                android:id="@+id/btn_booking_call"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/phone_icon"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Call"
                app:tint="@color/secondary_dark"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>